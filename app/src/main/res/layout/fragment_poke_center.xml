<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.PokeCenterFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokecenter"
            android:fontFamily="@font/pokemongb"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:src="@drawable/pokemoncenter"
            android:contentDescription="@string/pokecenter_building"
            android:layout_marginBottom="35dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/healButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/heal"
            android:layout_margin="5dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pokeCenterGoToMainMenu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/go_to_main_menu"
            android:layout_margin="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>